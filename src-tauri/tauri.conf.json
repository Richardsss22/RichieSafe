{
    "build": {
        "beforeDevCommand": "npm run dev --prefix ../web",
        "beforeBuildCommand": "npm run build --prefix ../web",
        "devPath": "http://localhost:5173",
        "distDir": "../web/dist",
        "withGlobalTauri": true
    },
    "package": {
        "productName": "RichieSafe",
        "version": "1.2.0"
    },
    "tauri": {
        "allowlist": {
            "all": false,
            "shell": {
                "all": false,
                "open": true
            }
        },
        "bundle": {
            "active": true,
            "targets": "all",
            "identifier": "com.richiesafe.app",
            "icon": [
                "icons/32x32.png",
                "icons/128x128.png",
                "icons/128x128@2x.png",
                "icons/icon.icns",
                "icons/icon.ico"
            ]
        },
        "security": {
            "csp": null
        },
        "windows": [
            {
                "fullscreen": false,
                "resizable": true,
                "title": "RichieSafe",
                "width": 1200,
                "height": 800
            }
        ]
    }
}