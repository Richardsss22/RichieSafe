{
  "appId": "com.richiesafe.app",
  "appName": "RichieSafe",
  "webDir": "dist",
  "server": {
    "androidScheme": "https",
    "allowNavigation": [
      "*.firebaseapp.com",
      "*.web.app",
      "accounts.google.com",
      "*.google.com"
    ]
  },
  "plugins": {
    "SplashScreen": {
      "backgroundColor": "#ffffff",
      "launchShowDuration": 2000,
      "showSpinner": false,
      "androidScaleType": "CENTER_INSIDE",
      "splashFullScreen": true,
      "splashImmersive": true
    }
  }
}